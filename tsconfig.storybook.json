{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": ".storybook/.tsc",
    "noEmit": false
  },
  "files": [],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "include": [
    "src",
    "src/**/*.stories.ts",
    "src/**/*.stories.js",
    "src/**/*.stories.jsx",
    "src/**/*.stories.tsx",
    "src/**/*.stories.mdx",
    ".storybook/*.js",
    ".storybook/*.ts",
    ".storybook/*.jsx",
    ".storybook/*.tsx"
  ]
}
