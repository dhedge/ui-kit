{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noEmit": false,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "outDir": "dist"
  },
  "exclude": ["node_modules", "tmp"]
}
