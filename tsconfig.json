{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "types": ["vitest/globals", "node"]
  },
  "include": [
    "src",
    "vite.config.ts",
    "postcss.config.js",
    "tailwind.config.js",
    "src/**/*.stories.*",
    ".storybook/**/*"
  ]
}
