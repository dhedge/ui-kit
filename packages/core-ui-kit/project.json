{
	"name": "core-ui-kit",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/core-ui-kit/src",
	"projectType": "library",
	"targets": {
		"build": {
			"command": "cd packages/core-ui-kit && rm -rf dist && tsup",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "packages/core-ui-kit"
			}
		},
		"publish": {
			"command": "node tools/scripts/publish.mjs core-ui-kit",
			"dependsOn": ["lint", "test", "build"]
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": [
					"packages/core-ui-kit/**/*.ts",
					"packages/core-ui-kit/package.json"
				]
			}
		},
		"test": {
			"executor": "@nx/vite:test",
			"outputs": ["{options.reportsDirectory}"],
			"options": {
				"passWithNoTests": true,
				"reportsDirectory": "../../coverage/packages/core-ui-kit"
			}
		}
	},
	"tags": []
}
